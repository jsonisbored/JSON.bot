{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "noImplicitAny": true,
        "sourceMap": true,
        "strict": true,
        "outDir": "build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": false,
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
    },
    "exclude": ["node_modules"],
}